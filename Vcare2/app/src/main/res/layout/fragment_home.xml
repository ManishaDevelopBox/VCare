<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hp.vcare.Home">

<ViewFlipper
    android:layout_width="match_parent"
    android:id="@+id/fffffff"
    android:flipInterval="1500"
    android:autoStart="true"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/im"


        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ur" />



</ViewFlipper>

        <TextView
            android:layout_width="match_parent"
            android:background="#c6e65981"
            android:layout_height="40dp"
            android:text="Patient Managment"
            android:textSize="20dp"
            android:padding="7dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:id="@+id/textView2" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/arrow_down_float"
            android:layout_below="@+id/fffffff"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homerelativelayout1"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/hob1"
            android:background="@drawable/addp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/hob2"
            android:background="@drawable/hos"
            android:layout_marginLeft="140dp"

            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/b1"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/hob3"
            android:background="@drawable/todo"
            android:layout_marginLeft="260dp"

            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/b2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homerelativelayout2"
        android:layout_below="@+id/homerelativelayout1"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add Patient"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:text="Discharge Patient"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:text="Medication
List"
            android:textAlignment="center"
            android:textSize="14dp"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true" />
    </RelativeLayout>



</RelativeLayout>
